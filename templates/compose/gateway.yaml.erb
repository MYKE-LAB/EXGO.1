version: '3.6'

services:
  gateway:
    restart: always
    image: envoyproxy/envoy:v1.10.0
    volumes:
      - ../config/gateway:/etc/envoy/
    command: /usr/local/bin/envoy -l info -c /etc/envoy/envoy.yaml
    labels:
      - "traefik.http.routers.gateway.rule=Host(`<%= @config['app']['subdomain'] %>.<%= @config['app']['domain'] %>`) && PathPrefix(`/api/, /admin, /assets/`)"
      - "traefik.http.routers.gateway.entrypoints=web"
      - "traefik.enable=true"
      - "traefik.default.port=8099"
      - "traefik.default.protocol=http"
      - "traefik.wss.routers.gateway.rule=Host(`<%= @config['app']['subdomain'] %>.<%= @config['app']['domain'] %>`)"
      - "traefik.wss.protocol=ws"
      - "traefik.wss.port=8099"
